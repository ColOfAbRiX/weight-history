# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# API
GET     /weights/all                controllers.DataController.getAll(start: Option[String] ?= None, end: Option[String] ?= None)
GET     /weights/weekly             controllers.DataController.getWeekly(start: Option[String] ?= None, end: Option[String] ?= None)
PUT     /weights/add                controllers.DataController.add()
POST    /weights/modify/:date       controllers.DataController.modify(date: String)
DELETE  /weights/remove/:date       controllers.DataController.remove(date: String)

# Web UI
GET     /weights                    controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
